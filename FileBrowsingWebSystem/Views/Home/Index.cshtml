
<div class="panel panel-default">
    <div class="panel-heading"><b>Path : </b></div>
    <div class="panel-body">
        <div class="">
            <a ng-click="pathClick(-1)">Server/</a><a ng-repeat="dir in pathlist" ng-click="pathClick($index)">{{dir}}/</a>
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading"><b>Directories and files:</b></div>
    <div class="panel-body">
        <a ng-repeat="dir in dirs" ng-click="dirClick(dir)">
            <span ng-if="$index > 0"><br/></span>
            {{dir}}
        </a>
        <span ng-repeat="file in files">
            <span ng-if="dirs.length > 0"><br /></span>
            {{file}}
        </span>
    </div>
</div>
